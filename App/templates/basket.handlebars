<div class="container">
    <div class="row">
        <h3>Basket Content</h3>

        <div class="col-xs-12 col-sm-12 col-lg-12 sidebar-offcanvas" id="sidebar">
            <!-- <div class="jumbotron">
            </div> -->
            <table class="table jumbotron" id="added-products">
                <tr id="added-products-table-header">
                    <th>Product</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
                {{#shoppingBasket}}
                <tr id={{productId}}> 
                    <td>{{name}}</td>
                    <td>${{singleUnitPrice}}</td>
                    <td class="quantity">{{quantity}}</td>
                    <td class="unit-price">$0</td>
                </tr>
                {{/shoppingBasket}}
            </table>
            <div>
                <p>Total Value: $<span id="total-value">0</span></p>
                <button id="confirm-order" class="btn btn-primary disabled" type="submit">Confirm Order</button>
            </div>
        </div>
    </div>
</div>