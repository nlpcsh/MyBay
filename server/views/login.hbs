<section id="login-header-top" class="d-flex justify-content-center align-items-center">
</section>

<section>
    
<div class="container my-5">
    <div class="error-msg text-center my-3">{{message}}</div>
    <div class="d-flex justify-content-center">
    <div id="sign-in-form" class="border rounded p-s5 mb-5 p-3">
        <h3 class="text-center mb-4">Sign In</h3>
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="email-signin">Email</label>
                <input type="email" id="email-signin" name="username" class="form-control" placeholder="myemail@example.com" required/>
            </div>
            <div class="form-group">
                <label for="passwors-signin">Password</label>
                <input type="password" id="passwors-signin" name="password" class="form-control" required/>
            </div>
            <div class="custom-control custom-checkbox form-group">
                <input type="checkbox" id="remember-me" name="rememberMe" class="custom-control-input">
                <label for="remember-me" class="custom-control-label">Remember me</label>
            </div>
            <button type="submit" class="btn btn-outline-primary btn-md">Sign In</button>
            <p class="text-center m-2">Not a member? <span id="register-form-link" class="text-info">Register</span></p>
        </form>
    </div>

    <div id="register-form" class="border rounded p-s5 mb-5 hidden p-3">
        <h3 class="text-center mb-4">Register</h3>
        <form action="/register" method="POST">
            <div class="row">
                <div class="form-group col-12 col-sm-6">
                    <label for="first-name">First Name</label>
                    <input type="text" id="first-name" name="firstName" class="form-control" />
                </div>
                <div class="form-group col-12 col-sm-6">
                    <label for="last-name">Last Name</label>
                    <input type="text" id="last-name" name="lastName" class="form-control" required />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12 col-sm-6">
                    <label for="email1">Email</label>
                    <input type="email" id="email1" name="username" class="form-control" placeholder="myemail@example.com" required />
                </div>
                <div class="form-group col-12 col-sm-6">
                    <label for="email2">Email Confirmation</label>
                    <input type="email-confirmation" id="email2" name="email2" class="form-control" placeholder="myemail@example.com" required />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12 col-sm-6">
                    <label for="password1">Password</label>
                    <input type="password" id="password1" name="password" class="form-control" required />
                </div>
                <div class="form-group col-12 col-sm-6">
                    <label for="password2">Password Confirmation</label>
                    <input type="password" id="password2" name="password2" class="form-control" required />
                </div>
            </div>

            <input type="submit" value="Register" class="btn btn-outline-primary btn-md">
        </form>
    </div>
    </div>
</div>
</section>

<script src="js/login.js"></script>